doctype 5
html
	head
		meta(name='author' content='Herald Gutierrez')
		meta(name='description' content='A fitness tracking application')
		meta(name='keywords' content='HTML, CSS, JavaScript, jQuery, NodeJS, Jade, ExpressJS, MongoDB, Mongoose')
		
		title= title

		link(rel='stylesheet' href='/css/jquery-ui-1.8.17.custom.css')
		link(rel='stylesheet' href='/css/bootstrap.css')
		link(rel='stylesheet' href='/css/style.css')
		block stylesheets

		script(src='/js/libs/jquery-1.7.1.min.js')
		script(src='/js/libs/bootstrap.js')
		script(src='/js/layout.js')
		script.
			(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
